<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_result_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16sp">


    <TextView
        android:id="@+id/recipe_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        android:text="This texit is in the thing"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_id_text"
        android:layout_marginLeft="8sp"
        android:text="Rank: 20"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/recipe_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_name_text"
        android:layout_marginLeft="8sp"
        android:text="Publisher: Me"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_name"
        android:layout_marginTop="8sp"
        android:layout_alignParentRight="true" />


</RelativeLayout>